{
  "name": "padelrise",
  "version": "1.0.0",
  "description": "Aplicación web para gestionar torneos escalera de pádel",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma migrate deploy && next build",
    "build:production": "prisma migrate deploy && npm run create-admin && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-dev": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset && npm run db:seed-dev",
    "db:reset-dev": "prisma migrate reset && npm run db:seed-dev",
    "db:deploy": "prisma migrate deploy",
    "create-admin": "tsx scripts/create-admin.ts",
    "postinstall": "prisma generate",
    "estructura": "node scripts/genera-estructura.js",
    "db:clean-production": "echo 'CUIDADO: Ve a Neon dashboard, resetea la BD, luego ejecuta: npm run db:deploy && npm run create-admin'",
    "db:deploy:prod": "dotenv -e .env.production.local -- prisma migrate deploy",
    "clean-neon": "dotenv -e .env.production.local -- tsx scripts/clean-production.ts",
    "create-admin:prod": "dotenv -e .env.production.local -- tsx scripts/create-admin.ts"
  },
  "dependencies": {
