{
  "name": "padelrise",
  "version": "1.0.0",
  "description": "Aplicación web para gestionar torneos escalera de pádel",
  "private": true,
  "scripts": {
    "_comment_dev": "========== Development ==========",
    "dev": "next dev",
    "dev:setup": "tsx scripts/dev-setup.ts",
    "dev:setup:quick": "tsx scripts/dev-setup.ts --quick",
    "lint": "next lint",
    "type-check": "tsc --noEmit",

    "_comment_build": "========== Build & Deploy ==========",
    "build": "next build",
    "build:with-db": "prisma migrate deploy && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma migrate deploy --skip-generate && next build",

    "_comment_database_local": "========== Database (Local Dev) ==========",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-dev": "tsx prisma/seed.ts",
    "db:reset-local": "dotenv -e .env.local -- prisma migrate reset && npm run db:seed-dev",
    "db:pull-schema": "tsx scripts/db-pull-schema.ts",
    "db:pull-schema:force": "tsx scripts/db-pull-schema.ts --force",
    "db:restore-from-prod": "tsx scripts/restore-from-production.ts",
    "db:restore-from-prod:force": "tsx scripts/restore-from-production.ts --force",
    "db:check-safety": "tsx scripts/safety-check.ts",

    "_comment_database_legacy": "========== Database (Legacy/Deprecated) ==========",
    "db:reset": "echo '⚠️  Use: npm run db:reset-local (for safety)' && npm run db:reset-local",
    "db:reset-dev": "echo '⚠️  Use: npm run db:reset-local (for safety)' && npm run db:reset-local",
    "db:deploy": "echo '⚠️  Use: npm run db:deploy:prod (for clarity)' && prisma migrate deploy",

    "_comment_production": "========== Production Database ==========",
    "db:deploy:prod": "dotenv -e .env.production.local -- prisma migrate deploy",
    "db:clean-production": "echo '❌ DANGER: This will delete ALL production data!' && echo 'Go to Neon dashboard, reset DB, then run: npm run db:deploy:prod && npm run create-admin:prod'",
    "clean-neon": "dotenv -e .env.production.local -- tsx scripts/clean-production.ts",

    "_comment_users": "========== User Management ==========",
    "create-admin": "tsx scripts/create-admin.ts",
    "create-admin:prod": "dotenv -e .env.production.local -- tsx scripts/create-admin.ts",

    "_comment_utils": "========== Utilities ==========",
    "estructura": "node scripts/genera-estructura.js",
    "diagnose-round": "tsx scripts/diagnose-round.ts",
    "diagnose-round:prod": "dotenv -e .env.production.local -- tsx scripts/diagnose-round.ts",
    "fix-stuck-round": "tsx scripts/fix-stuck-round.ts",
    "fix-stuck-round:prod": "dotenv -e .env.production.local -- tsx scripts/fix-stuck-round.ts"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@prisma/client": "^6.16.3",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.6",
    "dotenv-cli": "^10.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "next": "^14.2.32",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "recharts": "^3.1.2",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^30.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "prisma": "^6.16.3",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "padel",
    "torneo",
    "escalera",
    "nextjs",
    "typescript",
    "prisma"
  ],
  "author": "Escalapp Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
